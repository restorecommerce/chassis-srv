{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "lib"
  },
  "include": [
     "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "docs"
  ]
}
